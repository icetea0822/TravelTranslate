<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/cardview_margin"
        app:cardCornerRadius="@dimen/cardview_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/inner_cardview_margin">

                <ImageView
                    android:id="@+id/ivFlagLeft"
                    android:layout_width="@dimen/item_flag"
                    android:layout_height="@dimen/item_flag"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tvLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/item_margin_text_to_flag"
                    android:layout_toRightOf="@+id/ivFlagLeft"
                    android:text="你好"
                    android:textSize="@dimen/item_text_size" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/inner_cardview_margin">

                <ImageView
                    android:id="@+id/ivFlagRight"
                    android:layout_width="@dimen/item_flag"
                    android:layout_height="@dimen/item_flag"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tvRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/inner_cardview_textview_margin"
                    android:layout_toLeftOf="@+id/ivFlagRight"
                    android:text="你好"
                    android:textSize="@dimen/item_text_size" />

            </RelativeLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>